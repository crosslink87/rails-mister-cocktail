<html>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0)5%),url('<%= image_path 'images2.jpg' %>');">
  <div class="banner-content">
  <h1>Add a new dose</h1>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, include_blank: false %>
    <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_blank: false %>
    <%= f.button :submit, class: "btn" %>
  <% end %>
</div>
</div>
</html>
