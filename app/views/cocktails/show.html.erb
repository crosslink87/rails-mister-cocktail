
<html>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0)5%),url('<%= image_path 'images4.jpg' %>');">
  <div class="banner-content">
  <h1><strong><%= @cocktail.name %></strong></h1>
  <%= link_to "Back to all cocktails", cocktails_path, class: "btn" %> <br>
  <%= link_to "add new dose", new_cocktail_dose_path(@cocktail), class: "btn" %>
<br>
<br>
<div >
            <th>Ingredients</th>
          <% @cocktail.doses.each do |dose| %>
          <br>
              <td><%= dose.ingredient.name %></td>
              <br>
              <td><%= dose.description %></td>
              <br>
              <td>
                <br>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>

                <% end %>
              </td>
            </tr>
</div>
          <% end %>



</html>
